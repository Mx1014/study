package _thread;

import java.util.concurrent.atomic.AtomicInteger;


public class TestConcurrentCount {

	public AtomicInteger  count=new AtomicInteger(0);
	
	public  Object lock = new Object();
	
	public  int compute(){
		while(count.compareAndSet(1000, 1)){
		};
		
		return count.get();
	}
	
	public void threadCompute(){
		Thread t1 = new Thread(new Thread1("t1"));
		Thread t2 = new Thread(new Thread1("t2"));
		t1.start();t2.start();
	}
	
	public static void main(String[] args) {
		TestConcurrentCount tcc = new TestConcurrentCount();
		tcc.threadCompute();
	}
	
	
	class Thread1 implements Runnable{

		public String name;
		public Thread1(String name){
			this.name = name;
		}
		
		@Override
		public void run() {
			compute();


		}
		
	}
	
	
	
}
