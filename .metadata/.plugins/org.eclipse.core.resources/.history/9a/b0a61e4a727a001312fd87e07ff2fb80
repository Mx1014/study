import java.util.concurrent.TimeUnit;


public class TestThread {
	public static void main(String[] args) {
		
		
		Thread t  = new Thread(new Runnable() {
			
			@Override
			public void run() {
				try {
					TimeUnit.SECONDS.sleep(10);
				} catch (InterruptedException e) {
					e.printStackTrace();
				}
				
			}
		});
		
		t.join();
	}
}
